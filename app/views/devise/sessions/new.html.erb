
<div class="div-login">
  <h2 class="h2-sign">Login</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%#= f.label :email %><br />
    <%= f.email_field :email, placeholder: "my_email@domain.com", size: 25, :autofocus => true %></div>

    <div><%#= f.label :password %><br />
    <%= f.password_field :password, placeholder: "password", size: 25 %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>
    <br>

    <div><%= f.submit "Login", class: "btn btn-success btn-lg" %></div>
  <% end %>
  <p>
  <p>

  <%= render "devise/shared/links" %>
</div>