<h1 class='profile'>My Profile Page</h1>

  <!--  Show pictures -->
  <div class="container pictures">
    <h3 class='memory'>Memories</h3>
     <% activities_with_picture = current_user.activities.where("image is not NULL")%>
     <% activities_with_picture.each do |image| %> 
        <%= image_tag image.image_url(:thumb).to_s, class: 'show-img, center-block' %>
     <% end %>
  </div>

   <!-- 
   Show activities by category -->
   <div class="container activities">
   <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4"><h3 class="act">Social</h3>
           <div class="social">
             <% user_social_activities = current_user.real_charts[0].activities.where(category_id: 1)%>
            <% user_social_activities.each do |social_activity| %>
              <p>
                <%= social_activity.body %><br/>
                <em><%= social_activity.created_at.month %>/<%= social_activity.created_at.day %>/<%= social_activity.created_at.year %></em>
              </p>
            <% end %>
           </div>
        </div>
          
          <div class="col-xs-12 col-sm-4"><h3 class="act">Health</h3>
              <div class="health">
                  <% user_health_activities = current_user.real_charts[0].activities.where(category_id: 2)%>
                <% user_health_activities.each do |health_activity| %>
                <p>
                  <%= health_activity.body %><br/>
                  <em><%= health_activity.created_at.month %>/<%= health_activity.created_at.day %>/<%= health_activity.created_at.year %></em>
                </p>
                <% end %>
              </div>
          </div>

          <div class="col-xs- col-sm-4"><h3 class="act">Intellect</h3>
              <div class="intellect">
                <p>
                  <% user_intellect_activities = current_user.real_charts[0].activities.where(category_id: 3)%>
                <% user_intellect_activities.each do |intellect_activity| %>
                <div>
                  <%= intellect_activity.body %><br/>
                  <em><%= intellect_activity.created_at.month %>/<%= intellect_activity.created_at.day %>/<%= intellect_activity.created_at.year %></em>
                </div>
              </p>
                <% end %>
             </div>
          </div>
        </div>  
    </div>
</div>

    